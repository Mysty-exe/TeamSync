<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamSync"
        tools:targetApi="31">
        <activity
            android:name=".activities.SignupActivity"
            android:exported="false"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name=".activities.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HomePageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".activities.AddTeamActivity"
            android:theme="@style/Theme.AppPopUp" />
        <activity
            android:name=".activities.AddEventActivity"
            android:theme="@style/Theme.AppPopUp" />
        <activity
            android:name=".activities.ViewEventActivity"
            android:theme="@style/Theme.AppCloseablePopUp" />
        <activity
            android:name=".activities.EditEventActivity"
            android:theme="@style/Theme.AppPopUp" />
        <activity
            android:name=".activities.TeamActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".activities.UserSettingsActivity" />
    </application>

</manifest>